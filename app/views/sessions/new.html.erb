<%= form_tag do %>
  <% if flash[:alert] %>
    <div id="error_explanation">
      <ul>
        <li><%= flash[:alert] %></li>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :name %><br />
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="field">
		<%= label_tag :password %><br />
		<%= password_field_tag :password, params[:password] %>
  </div>
  <div class="actions">
    <%= submit_tag "Log-in" %>
  </div>
<% end %>