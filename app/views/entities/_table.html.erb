<table id="entities">
	<thead>
		<tr><th>Name</th><th></th></tr>
  </thead>
	<tbody>
	</tbody>
</table>

<script>
$(document).ready(function() {
	$('#entities').dataTable({
		"bProcessing": true,
		"sAjaxSource": "<%= request.url %>.json",
		"sAjaxDataProp": "entities",
		"aoColumns": [
			{"fnRender":function(oObj) { return '<a href="'+oObj.aData['url']+'">'+oObj.aData['name']+'</a>'; }},
			{"fnRender":function(oObj) { <% if @user %>return '<a class="edit icon" href="'+oObj.aData['url']+'/edit/">Edit</a>';<% else %>return "";<% end %> }}
		],
		"sPaginationType": "full_numbers"
	});
} );
</script>

<% if @user %><p class="buttons">
	<%= link_to 'New Entity', new_entity_path, :class => "new button" %>
</p><% end %>