<table id="entities">
	<thead>
		<tr>
			<th>Received (USD)</th>
			<th>Projects</th>
			<th>Name</th>
			<th>% Clean Energy</th>
			<th>% Energy Access</th>
			<th></th>
		</tr>
  </thead>
	<tbody>
	</tbody>
</table>

<script>
$(document).ready(function() {
	$('#entities').dataTable({
		"bProcessing": true,
		"sAjaxSource": "<%= request.url %>.json",
		"sAjaxDataProp": "entities",
		"aoColumns": [
			{ "mDataProp":"received", "sType":"currency", "sWidth":"100px", "asSorting":["desc","asc"] },
			{"sWidth":"50px", "mDataProp":"projects"},
			{"fnRender":function(oObj) { return '<a href="'+oObj.aData['entity_url']+'">'+oObj.aData['name']+'</a>'; }},
			{"sWidth":"100px", "mDataProp":"percent_clean"},
			{"sWidth":"100px", "mDataProp":"percent_access"},
		],
		"sPaginationType": "full_numbers"
	});
} );
</script>