{
	"entities":[
	<% # List all @entities %>
	<% @entities.each do |entity| %>{
		"received":"<%= number_to_currency( entity.received ) %>",
		"projects":<%= entity.projects.size %>,
		"name":"<%= entity.name %>",
		"kind":"<%= entity.kind %>",
		"percent_clean":"<%= number_to_percentage( entity.percent_clean * 100, :precision => 2 ) %>",
		"percent_access":"<%= number_to_percentage( entity.percent_access * 100, :precision => 2 ) %>",
		"entity_url":"<%= url_for entity %>"
	}<% unless entity == @entities.last %>,<% end %>
	<% end %>
	]
}