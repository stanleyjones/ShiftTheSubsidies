<table id="institutions">
	<thead>
		<tr>
			<th>Institution</th>
			<th>$ Awarded (USD)</th>
			<th>Clean/Dirty</th>
			<th></th>
		</tr>
  </thead>
	<tbody>
	<tr colspan="3"><td>Loading data...</td></tr>
	</tbody>
</table>

<script>
$(document).ready(function() {
	$('#institutions').dataTable({
		"bProcessing": true,
		"sAjaxSource": "<%= request.url %>.json",
		"sAjaxDataProp": "institutions",
		"aoColumns": [
			{"fnRender":function(oObj) { return '<a href="'+oObj.aData['url']+'">'+oObj.aData['name']+' ('+oObj.aData['abbreviation']+')</a>'; }},
			{"mDataProp":"awarded"},
			{"mDataProp":"ratio"},
			{"fnRender":function(oObj) { <% if @user %>return '<a class="edit icon" href="'+oObj.aData['url']+'/edit/">Edit</a>';<% else %>return "";<% end %> }}
		],
		"sPaginationType": "full_numbers"
	});
} );
</script>

<% if @user %><p class="buttons">
	<%= link_to 'New Institution', new_institution_path, :class => "new button" %>
</p><% end %>