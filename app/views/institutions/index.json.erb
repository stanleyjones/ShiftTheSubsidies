{
	"institutions":[
	<% # List all @institutions %>
	<% @institutions.each do |institution| %><% cache("/institution/#{institution.id}-#{institution.updated_at}/#{@start_date.year}/#{@end_date.year}", :expires_in => 30.minutes) do %>{
		"awarded":"<%= number_to_currency( institution.amount_awarded( institution.subsidies,@start_date,@end_date )) %>",
		"awarded_raw": <%= institution.amount_awarded( institution.subsidies,@start_date,@end_date ) %>,
		"name":"<%= institution.name %>",
		"abbreviation":"<%= institution.abbreviation %>",
		"description":"<%= institution.description %>",
		"percent_clean": <%= number_with_precision( institution.percent_clean * 100, :precision => 0 ) %>,
		"percent_access": <%= number_with_precision( institution.percent_access * 100, :precision => 0 ) %>,
		"institution_url":"institutions/<%= institution.id %>"
	}<% end %><% unless institution == @institutions.last %>,<% end %>
	<% end %>
	]
}