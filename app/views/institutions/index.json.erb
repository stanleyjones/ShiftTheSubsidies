{
	"institutions":[
	<% # List all @institutions %>
	<% @institutions.each do |institution| %>{
		"awarded":"<%= number_to_currency( institution.awarded ) %>",
		"name":"<%= institution.name %>",
		"abbreviation":"<%= institution.abbreviation %>",
		"description":"<%= institution.description %>",
		"percent_clean":"<%= number_to_percentage( institution.percent_clean * 100, :precision => 2 ) %>",
		"percent_access":"<%= number_to_percentage( institution.percent_access * 100, :precision => 2 ) %>",
		"institution_url":"<%= url_for institution %>"
	}<% unless institution == @institutions.last %>,<% end %>
	<% end %>
	]
}