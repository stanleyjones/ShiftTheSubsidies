<h1>Listing institutions</h1>

<table>
  <tr>
    <th>Abbreviation</th>
    <th>Name</th>
    <th>Kind</th>
    <th>Fiscal Year</th>
    <th>Visible?</th>
    <th></th>
  </tr>

<% @institutions.each do |institution| %>
  <tr>
    <td><%= institution.abbreviation %></td>
    <td><%= institution.name %></td>
    <td><%= institution.kind %></td>
    <td><%= month_name(institution.fiscal_year) %></td>
    <td><%= institution.visible %></td>
    <td>
    	<%= link_to 'Show', institution, :class => "show icon" %>
    	<%= link_to 'Edit', edit_institution_path(institution), :class => "edit icon" %>
    	<%= link_to 'Destroy', institution, :confirm => 'Are you sure?', :method => :delete, :class => "destroy icon" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Institution', new_institution_path, :class => "new button" %>
