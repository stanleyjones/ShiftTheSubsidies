<table id="table">
	<thead><tr><th>Received</th><th>Projects</th><th>Name</th><th>% Clean</th><th>% Access</th><th><span class="error icon">Errors?</span></th><th></th></tr></thead>
	<tbody></tbody>
	<tfoot><tr><th></th><th></th><th></th><th></th><th></th></tr></tfoot>
</table>

<script>
$(document).ready(function() {
	var h = $('#wrapper').height() - 328;
	$('#table').dataTable({
		"bPaginate": false,
		"sAjaxSource": "<%= request.url %>.json",
		"sAjaxDataProp": "entities",
		"sScrollY": h+'px',
		"aoColumns": [
			{"sWidth":"100px", "sType":"currency", "fnRender":function(oObj) { return '$'+to_currency(oObj.aData['total']); },"asSorting":["desc","asc"]},
			{"sWidth":"100px", "mDataProp":"projects"},
			{"fnRender":function(oObj) { return '<b>'+oObj.aData['name']+'</b>'; }},
			{"sWidth":"100px", "sType":"percent", "fnRender": function(oObj) { return Math.floor((oObj.aData['clean'] / Math.max(oObj.aData['total'],1)) * 100)+"%"; }},
			{"sWidth":"100px", "sType":"percent", "fnRender": function(oObj) { return Math.floor((oObj.aData['access'] / Math.max(oObj.aData['total'],1)) * 100)+"%"; }},
			{ "sWidth":"25px", "fnRender":function(oObj) { if (oObj.aData['valid'] != true) { return '<span class="error icon">Errors</span>'; } else { return "&nbsp;"; }}},
			{"bSortable":false, "sWidth":"25px", "fnRender":function(oObj) { return '<a class="edit icon" href="/admin/entities/'+oObj.aData['entity_id']+'/edit/">Edit</a>'; }}
		],
		"fnFooterCallback": function ( nRow, aaData, iStart, iEnd, aiDisplay ) {
			var total = {'total':0};
			for (var i=iStart; i<iEnd; i++) {
				total['total']  += aaData[aiDisplay[i]]['total']*1.0;
			}
			var footer = nRow.getElementsByTagName('th');
			footer[0].innerHTML = '$'+to_currency(total['total']);
		}
	});
});
</script>

<% if @user %><p class="buttons">
	<%= link_to 'New Entity', new_admin_entity_path, :class => "new button" %>
</p><% end %>