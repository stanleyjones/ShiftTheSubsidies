<table id="sectors">
	<thead>
		<tr>
			<th>Received (USD)</th>
			<th>Projects</th>
			<th>Name</th>
    	<th>Category</th>
    	<th></th>
    	<th></th>
		</tr>
  </thead>
</table>

<script>
$(document).ready(function() {
	$('#sectors').dataTable({
		"bProcessing": true,
		"bPaginate": false,
		"sAjaxSource": "<%= request.url %>.json",
		"sAjaxDataProp": "sectors",
		"aoColumns": [
			{"sWidth":"100px", "fnRender":function(oObj) { return '$'+to_currency(oObj.aData['received']); }, "sType":"currency", "asSorting":["desc","asc"] },
			{"sWidth":"50px", "mDataProp":"projects"},
			{"fnRender":function(oObj) { return '<b>'+oObj.aData['name']+'</b>'; }},
			{"mDataProp":"category"},
			{"sWidth":"15px", "fnRender":function(oObj) { if (oObj.aData['valid'] != true) { return '<span class="error icon">Errors</span>'; } else { return "&nbsp;"; }}},
			{"bSortable":false, "sWidth":"25px", "fnRender":function(oObj) { return '<a class="edit icon" href="/admin/sectors/'+oObj.aData['sector_id']+'/edit/">Edit</a>';<% else %>return ""; }}
		],
		"sPaginationType": "full_numbers"	});
} );
</script>

<% if @user %><p class="buttons">
	<%= link_to 'New Sector', new_admin_sector_path, :class => "new button" %>
</p><% end %>