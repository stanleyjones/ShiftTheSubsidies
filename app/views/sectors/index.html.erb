<h1>Listing sectors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th></th>
  </tr>

<% @sectors.each do |sector| %>
  <tr>
    <td><%= sector.name %></td>
    <td><%= sector.category %></td>
    <td>
    	<%= link_to 'Show', sector, :class => "show icon" %>
    	<%= link_to 'Edit', edit_sector_path(sector), :class => "edit icon" %>
    	<%= link_to 'Destroy', sector, :confirm => 'Are you sure?', :method => :delete, :class => "destroy icon" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Sector', new_sector_path, :class => "new button" %>
