<p id="table_caption">Energy sectors for <span class="legend_start_year"><%= @start_date.year %></span><span class="legend_end_year">-<%= @end_date.year %></span></p>

<table id="table">
	<thead><tr><th>Received</th><th></th><th>Name</th><th>Category</th></tr></thead>
	<tbody></tbody>
	<tfoot><tr><th></tr></tfoot>
</table>

<script>
function draw_table(data) {
	var h = $('#graph').height() - 162; /* thead (86px) + tfoot (78px) */
	var oTable = $('#table').dataTable({
		"bDestroy": true,
		"bPaginate": false,
		"aaData": data.sectors,
		'aaSorting': [[0,'desc']],
		"sScrollY": h+'px',
		'aoColumns': [
			{
				'sWidth': '10%', 'sType': 'currency',
				'mData': 'received',
				'mRender': function( data ) { return '$'+to_currency( data.all ); }
			},
			{
				'sWidth': '5%',
				'mData': 'icon',
				'mRender': function( data ) { return '<img src="'+data+'" height="32" width="32" />'; }
			},
			{
				'mData': 'name',
				'mRender': function( data, type, row ) { return '<a href="/sectors/'+row.sector_id+'">'+data+'</a>'; }
			},
			{
				'sWidth': '10%',
				'mData': 'category'
			}
		],
		'fnRowCallback': function( tr, row, index ) {
			$('td:eq(0)', tr).html( '$'+to_currency( row.received[r] ));
		},
		'fnFooterCallback': function ( tr, row, start, end, index ) {
			var total = {'total': 0};
			for (var i=start; i<end; i++) {
				total.total  += row[index[i]].received[r] * 1.0;
			}
			$('th:eq(0)', tr).html( '$'+to_currency( total.total ));
		}
	});
	$.fn.dataTableExt.afnFiltering.push(function( oSettings, aData, iDataIndex ) {
		if ( aData[0] != '$0' ) { return true; } else { return false; }
	});
	$('button.table').click(function() { oTable.fnAdjustColumnSizing(); });	
};
</script>

