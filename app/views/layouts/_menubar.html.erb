<div id="menubar">
	<div class="container">
		<h1 id="view_title"><%= title ||= controller.controller_name.capitalize %></h1>
		<% unless defined? modes and !modes %><ul id="mode">
			<li><button id="graphviewmode" class="graph mode button" onclick="view('#graphview');">Graph</button></li>
			<li><button id="tableviewmode" class="table mode button" onclick="view('#tableview');">Table</button></li>
		</ul><% end -%>
		<ul id="popovers">
			<% if defined? start_date %><li>
				<button class="range" onclick="popover('range');">Timeline</button>
				<ul id="range" class="popover">
					<h2>Years</h2>
					<li><select id="r">
						<%= options_for_select (START_YEAR..END_YEAR).to_a << 'all', :selected => 'all' %>
					</select></li>
				</ul>
			</li><% end -%>
		</ul>
	</div>
</div><!-- #menubar -->