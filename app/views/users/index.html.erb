<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td>
    	<%= link_to 'Show', user, :class => "show icon" %>
    	<%= link_to 'Edit', edit_user_path(user), :class => "edit icon" %>
    	<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, :class => "destroy icon" %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, :class => "new button" %>
